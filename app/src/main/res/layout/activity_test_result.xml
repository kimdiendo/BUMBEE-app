<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_sma"
    tools:context=".activities.TestVocab.TestResult">

    <TextView
        android:id="@+id/txtReult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="137dp"
        android:text="Your Result"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTopicResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="80dp"
        android:text="Topic: "
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReult" />

    <TextView
        android:id="@+id/txtScoreResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="47dp"
        android:text="Score:"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="28dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTopicResult" />
    <Button
        android:id="@+id/btnBackToTest"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="270dp"
        android:text="Do This Test Again"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/rb_new_circle"
        android:textColor="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReult" />
    <Button
        android:id="@+id/btnBackToWord"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="360dp"
        android:text="Learn Another  Topic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/rb_new_circle"
        android:textColor="#FFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReult" />

</androidx.constraintlayout.widget.ConstraintLayout>