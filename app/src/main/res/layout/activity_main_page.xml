<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Main_Page"
    android:background="@drawable/android_sma">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/rb_white_top_left_top_right"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/bee" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:rotation="-5"
            android:rotationX="25"
            android:text="WELCOME TO BEE"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/imagebtnReading"
        android:layout_width="151dp"
        android:layout_height="139dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rb_cirle"
        android:src="@drawable/readingbook" />

    <ImageButton
        android:id="@+id/imagebtnLanguageTranslator"
        android:layout_width="151dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="185dp"
        android:background="@drawable/rb_cirle"
        android:src="@drawable/languages" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="345dp"
        android:background="@drawable/rb_new_circle"
        android:text="Log In"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="241dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="342dp"
        android:background="@drawable/rb_new_circle"
        android:text="Sign Up"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/imageNote"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/rb_cirle"
        android:src="@drawable/notes" />

    <ImageButton
        android:id="@+id/imagebtnTestVocab"
        android:layout_width="140dp"
        android:layout_height="138dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rb_cirle"
        android:src="@drawable/test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="202dp"
        android:text="Note"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="35dp"
        android:text="Reading"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="199dp"
        android:text="Translate"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="37dp"
        android:text="Vocabulary"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>
