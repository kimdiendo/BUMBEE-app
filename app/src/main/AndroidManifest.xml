<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bumbee">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bee"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bee"
        android:supportsRtl="true"
        android:theme="@style/Theme.BUMBEE">

        <activity
            android:name=".activities.TestVocab.TestResult"
            android:exported="false" />
        <activity
            android:name=".activities.TestVocab.QuickTest"
            android:exported="false" />
        <activity
            android:name=".activities.TestVocab.AdapterVocab"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".activities.TestVocab.MainActivity2"
            android:exported="false" />
        <activity
            android:name=".activities.TestVocab.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.note.note"
            android:exported="false" />
        <activity
            android:name=".activities.Reading.NewsDetail"
            android:exported="false" />
        <activity
            android:name=".activities.Reading.news"
            android:exported="false" />
        <activity
            android:name=".activities.Forgot_password"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.Main_Page"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.introduction"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.SignInActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.note.LanguageTranslator"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>